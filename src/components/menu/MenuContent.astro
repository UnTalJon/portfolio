---
import MenuLink from "./MenuLink.astro";
import MenuTag from "./MenuTag.astro";
---

<div class="menu-content-main">
    <div class="menu-column">
        <MenuLink href="#" label="Index" />
        <MenuLink href="#" label="Who" />
        <MenuLink href="#" label="Portfolio" />
        <MenuLink href="#" label="Contact" />
    </div>
    <div class="menu-column">
        <MenuTag href="#" label="Github" />
        <MenuTag href="#" label="LinkedIn" />
        <MenuTag href="https://github.com/UnTalJon/portfolio" label="Code" />
    </div>
</div>

<style>
    .menu-content-main {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 80%;
        padding: 2rem;
        display: flex;
        align-items: flex-end;
        gap: 1rem;
    }

    @media (max-width: 1200px) {
        .menu-content-main {
            width: 100%;
            top: 50%;
            flex-direction: column;
            align-items: flex-start;
            gap: 4rem;
        }
    }

    @media (max-width: 800px) {
        gap: 2rem;
    }
</style>
