---
import PreloaderLogo from "./PreloaderLogo.astro";
import PreloaderProgressBar from "./PreloaderProgressBar.astro";
---

<div class="preloader-progress">
    <PreloaderProgressBar />
    <PreloaderLogo />
</div>

<style>
    .preloader-progress {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100svh;
        pointer-events: none;
    }

    .preloader-progress {
        background-color: var(--base-200);
        z-index: 1;
        will-change: opacity;
    }
</style>
