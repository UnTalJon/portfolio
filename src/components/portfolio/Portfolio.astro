---
import Title from "@components/common/Title.astro";
import Project from "./Project.astro";
import Palantir from "./Palantir.astro";
---

<section id="portfolio" class="section">
    <Title>Portfolio</Title>
    <div class="grid">
        <div class="project1">
            <Palantir />
        </div>
        <div class="project2">
            <Project title="Bank" description="Bank System" />
        </div>
        <div class="project3">
            <Project title="Event" description="Event manager" />
        </div>
        <div class="project4">
            <Project title="Quiz" description="Real-Time Event Handler" />
        </div>
    </div>
</section>

<style>
    .grid {
        display: grid;
        width: 100%;
        height: 90%;
        grid-template-areas:
            "palantir palantir bank"
            "event quiz bank";
        gap: 2rem;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: repeat(2, 1fr);
        padding: 2rem;
    }

    .project1 {
        grid-area: palantir;
    }

    .project2 {
        grid-area: bank;
    }

    .project3 {
        grid-area: event;
    }

    .project4 {
        grid-area: quiz;
    }

    @media (max-width: 1200px) {
        section {
            height: 200svh;
        }

        .grid {
            grid-template-areas: "palantir" "bank" "event" "quiz";
            grid-template-columns: 1fr;
            grid-template-rows: repeat(4, 1fr);
        }
    }
</style>
